<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
    <display-name>JavaEE Sandbox</display-name>
    <servlet>
        <servlet-name>RaceInfo</servlet-name>
        <servlet-class>servlets.RaceInfo</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>RaceInfo</servlet-name>
        <url-pattern>/race/id</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Start</servlet-name>
        <servlet-class>servlets.StartRace</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>Start</servlet-name>
        <url-pattern>/race/start</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>statistic</servlet-name>
        <servlet-class>servlets.Statistic</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>statistic</servlet-name>
        <url-pattern>/stats</url-pattern>
    </servlet-mapping>
</web-app>